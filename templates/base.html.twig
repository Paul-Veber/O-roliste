<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}O'Rolliste
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
										                                                                                                                                                                                                           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
			<link rel="stylesheet" href="{{asset("css/styleadventure.css")}}">
			<link
			rel="stylesheet" href="{{asset("css/style.css")}}">

		{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

		{% set images_directory = app.request.server.get('UPLOAD_IMAGES_DIRECTORY') %}
		{% block javascripts %}
			<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
			<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		{% include "nav.html.twig" %}
		<div class="container-xxl">

			{# display every flash message available #}
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ label }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}


			<div class="row mt-5">
			
				<div class="col-xl-2">
				{% include "nav-lateral.html.twig" %}
				</div>
				<div class="col-xl-10 mb-5"> {% block body %}{% endblock %}
					</div>
				</div>
			</div>
			{% include "footer.html.twig" %}
		</body>
	</html>
