{% extends 'base.html.twig' %}

{% block title %}Liste des parties
{% endblock %}

{% block body %}

{% for game in games%}
	<div class="card mb-3" style="max-width: 100%;">
		<div class="row g-0">
			<div class="col-md-2">
				<img src="{{ asset('images/upload/' ~ game.image) }}" width="50px" height="50px" alt="Illustration de {{game.name}}">
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h5 class="card-title">{{ game.name }}</h5>
					<p class="card-text d-inline-block text-truncate" style="max-width: 100%;">{{ game.description }}</p>
				</p>
				<a href="{{path('game_read',{'id': game.id}) }}">
					<div class="d-grid gap-2 col-6 mx-auto">

						<button class="btn btn-primary" type="button">Voir le d√©tail de la partie</button>
					</div>
				</a>
			</div>
		</div>
	</div>
</div>{% endfor %}{% endblock %}
