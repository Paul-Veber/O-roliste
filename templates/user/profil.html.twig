{% extends 'base.html.twig' %}

{% block body %}
	<h1>{{user.username}}</h1>
	<div class="card mb-3" style="max-width: 100%;">
		<div class="row g-0">
			<div class="col-md-2">

				<img src="{{ asset(images_directory ~ '/' ~ user.avatar)}}" class="img-thumbnail" width="200" height="200" alt="{{user.username}}">
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<p class="card-text">
						{{user.email}}
					</p>
				</div>
				<div class="card-body">
					<p class="card-text">
						{{user.description}}
					</p>
				</div>
			</div>
		</div>
		<a href="{{path("user_edit")}}">
			<button class="btn btn-danger" type="button">
				Changer ses informations
			</button>
		</a>
	</div>

{% endblock %}
