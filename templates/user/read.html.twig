{% extends 'base.html.twig' %}

{% block body %}
	<h2>{{user.username}}</h2>

	<div>
		<img src="{{ asset(images_directory ~ '/' ~ user.avatar)}}" class="img-thumbnail" width="200" height="200" alt="{{app.user.username}}">
	</div>

	<div>
		<p>{{user.description}}
			{# <a href="#">afficher plus</a>#}
		</p>
	</div>

					{% if is_granted('ROLE_USER', user) %}
					<form action="{{ path('friend_add', {id: user.id}) }}" method="post" class="d-inline">

						<button class="btn btn-danger">Ajouter en ami</button>

						<input type="hidden" name="_method" value="add">
						<input type="hidden" name="_token" value="{{ csrf_token('addFriend') }}">
					</form>
				{% endif %}

{% endblock %}
